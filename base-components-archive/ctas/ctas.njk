{% macro ctas(info) %}
  <div class="ctas">
    {% for cta in info %}
      {# link is either a button or a link and either an internal or external link #}
      {% if cta.isButton %}
        {% if cta.isExternal %}
          <a class="cta-button {{ cta.buttonStyle }}" href="{{cta.url}}" target="_blank" rel="noopener noreferrer">{{ cta.label}}</a>
        {% else %}
          <a class="cta-button {{ cta.buttonStyle }}" href="{{cta.url}}">{{ cta.label}}</a>
        {% endif %}
      {% else %}
        {% if cta.isExternal %}
          <a class="cta-link" href="{{cta.url}}" target="_blank" rel="noopener noreferrer">{{ cta.label}}</a>
        {% else %}
          <a class="cta-link" href="{{cta.url}}">{{ cta.label}}</a>
        {% endif %}
      {% endif %}
    {% endfor %}
  </div>
{% endmacro %}