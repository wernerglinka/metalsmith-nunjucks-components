{% from "../partials/responsive-image.njk" import responsiveImage %}

<section class="section-image {% if params.paddingTop %}paddingTop{% endif %} {% if params.paddingBottom %}paddingBottom{% endif %}">
  <div class="container">
    <div 
      class="outer-image-wrapper {{ params.alignment }} {% if params.hasBorder %}has-border{%endif%}" 
      {% if params.maxWidth %}style="max-width: {{ params.maxWidth }}px;"{% endif %}}   
    >
      {{ responsiveImage(params.image, site) }}
    </div>
    <p class="image-caption">{{params.image.caption}}</p>
  </div>
</section>